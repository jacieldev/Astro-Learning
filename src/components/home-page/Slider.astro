<!-- Contenedor principal de Swiper -->
<div class="swiper">
    <!-- Wrapper adicional requerido -->
    <div class="swiper-wrapper">
        <!-- Los slides -->
        <div class="swiper-slide">
            <img src="/blog-placeholder-1.jpg" alt="" />
        </div>
        <div class="swiper-slide">
            <img src="/blog-placeholder-2.jpg" alt="" />
        </div>
        <div class="swiper-slide">
            <img src="/blog-placeholder-3.jpg" alt="" />
        </div>
        <div class="swiper-slide">
            <img src="/blog-placeholder-4.jpg" alt="" />
        </div>
    </div>
</div>

<style>
    .swiper-slide {
        height: 400px;
        overflow: hidden;
    }
    .swiper-slide img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

<script>
    // Core de Swiper y estilos
    import Swiper from "swiper";
    import "swiper/css";
    // MÃ³dulo Navigation de Swiper y estilos

    import "swiper/css/navigation";
    import { Autoplay, Pagination } from "swiper/modules";
    // Configurar Swiper
    const swiper = new Swiper(".swiper", {
        modules: [Autoplay, Pagination],
        loop: true,
        slidesPerView: 1,
        spaceBetween: 0,
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        autoplay: {
            delay: 3000,
            disableOnInteraction: false,
        },
    });
</script>
